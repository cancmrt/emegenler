                    data: [282, 350, 411, 502, 635, 809, 947, 1402, 3700, 5267],
                    label: "Asia",
                    borderColor: "#8e5ea2",
                    fill: false
                }, {
                    data: [168, 170, 178, 190, 203, 276, 408, 547, 675, 734],
                    label: "Europe",
                    borderColor: "#3cba9f",
                    fill: false
                }, {
                    data: [40, 20, 10, 16, 24, 38, 74, 167, 508, 784],
                    label: "Latin America",
                    borderColor: "#e8c3b9",
                    fill: false
                }, {
                    data: [6, 3, 2, 2, 7, 26, 82, 172, 312, 433],
                    label: "North America",
                    borderColor: "#c45850",
                    fill: false
                }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Sales in Customer Region'
                }
            }
        });

    </script>
    <script class="itsection" emegenler-guard>
        
        var usageComputer = document.getElementById("usageComputer");
        var dataUsage = document.getElementById("dataUsage");
        var internetUsage = document.getElementById("internetUsage");
       
        var radarItUsage = new Chart(usageComputer, {
            type: 'radar',
            data: {
                labels: ["Sales", "IT", "Admin", "Human Resource"],
                datasets: [
                    {
                        label: "2019",
                        fill: true,
                        backgroundColor: "rgba(179,181,198,0.2)",
                        borderColor: "rgba(179,181,198,1)",
                        pointBorderColor: "#fff",
                        pointBackgroundColor: "rgba(179,181,198,1)",
                        data: [55.61, 21.69, 6.62, 6.82]
                    }, {
                        label: "2020",
                        fill: true,
                        backgroundColor: "rgba(255,99,132,0.2)",
                        borderColor: "rgba(255,99,132,1)",
                        pointBorderColor: "#fff",
                        pointBackgroundColor: "rgba(255,99,132,1)",
                        pointBorderColor: "#fff",
                        data: [54.16, 7.61, 8.06, 4.45]
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Distribution of Computer Users'
                }
            }
        });
        var dataUsagePolar = new Chart(dataUsage, {
            type: 'polarArea',
            data: {
                labels: ["Sales", "IT", "Admin", "Human Resource"],
                datasets: [
                    {
                        label: "Population (millions)",
                        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9"],
                        data: [2478, 5267, 734, 784]
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Data usage based on departments'
                }
            }
        });
        var interUsageDonat = new Chart(internetUsage, {
            type: 'doughnut',
            data: {
                labels: ["IT", "Admin", "Sales", "Human Resource",],
                datasets: [
                    {
                        label: "Population (millions)",
                        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9"],
                        data: [1243, 6986, 456, 794]
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Predicted world population (millions) in 2050'
                }
            }
        });
        
    </script>
    <script class="hrsection" emegenler-guard>

        var peopleCompany = document.getElementById("peopleCompany");
        var predictedRecruitment = document.getElementById("predictedRecruitment");
        var performanceComparision = document.getElementById("performanceComparision");

        var peopleCompanyBar = new Chart(peopleCompany, {
            type: 'bar',
            data: {
                labels: ["Sales", "IT", "Human Resource"],
                datasets: [
                    {
                        label: "Population (millions)",
                        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f"],
                        data: [250, 165, 42]
                    }
                ]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: 'People In Company'
                }
            }
        });
        var predictedRecruitmentPie = new Chart(predictedRecruitment, {
            type: 'pie',
            data: {
                labels: ["Sales", "IT", "HumanResource"],
                datasets: [{
                    label: "Population (millions)",
                    backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
                    data: [2478, 5267, 734, 784, 433]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Predicted world population (millions) in 2050'
                }
            }
        });
        var performanceComparisionBar = new Chart(performanceComparision, {
            type: 'bar',
            data: {
                labels: ["2000", "2005", "2010", "2019"],
                datasets: [
                    {
                        label: "IT",
                        backgroundColor: "#3e95cd",
                        data: [133, 221, 783, 2478]
                    }, {
                        label: "Sales",
                        backgroundColor: "#8e5ea2",
                        data: [408, 547, 675, 734]
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Performance Comparision based on departments'
                }
            }
        });
    </script>


}
