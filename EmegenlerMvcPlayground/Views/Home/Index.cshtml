@section Header {

    <partial name="~/Views/Shared/_Navbar.cshtml" />

}
@{
    ViewData["Title"] = "Home Page";
}
@addTagHelper Guard.Emegenler.TagOperations.TagHelpers.*, Guard.Emegenler
<div class="text-center">
    <div class="row salessection" emegenler-guard>
        <div class="col-12">
            <h1>Sales Report <span class="badge badge-info">New</span></h1>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="population" width="100" height="100"></canvas>
                </div>

            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="sales" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="customerByYear" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row itsection" emegenler-guard>
        <div class="col-12">
            <h1>IT Report <span class="badge badge-secondary">New</span></h1>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="usageComputer" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="dataUsage" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="internetUsage" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row hrsection" emegenler-guard>
        <div class="col-12">
            <h1>Human Resource Report <span class="badge badge-secondary">New</span></h1>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="peopleCompany" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="predictedRecruitment" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <canvas id="performanceComparision" width="100" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    <script class="salessection" emegenler-guard>

        var population = document.getElementById('population');
        var sales = document.getElementById('sales');
        var customerByYear = document.getElementById("customerByYear");

        var populationPieChart = new Chart(population, {
            type: 'pie',
            data: {
                labels: ["Africa", "Asia", "Europe", "Latin America", "North America"],
                datasets: [{
                    label: "Population (millions)",
                    backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
                    data: [2478, 5267, 734, 784, 433]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Predicted world population (millions) in 2050'
                }
            }
        });
        var salesBarHorizontal = new Chart(sales, {
            type: 'horizontalBar',
            data: {
                labels: ["Acme Product 1000", "Acme  Super Product 1100", "Acme Half Product 800", "Acme Product 2000", "Acme Product 2500"],
                datasets: [
                    {
                        label: "Sales (millions)",
                        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
                        data: [2478, 5267, 734, 784, 433]
                    }
                ]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: 'Acme Product Sales'
                }
            }
        });
        var salesLineHorizontal = new Chart(customerByYear, {
            type: 'line',
            data: {
                labels: [1500, 1600, 1700, 1750, 1800, 1850, 1900, 1950, 1999, 2050],
